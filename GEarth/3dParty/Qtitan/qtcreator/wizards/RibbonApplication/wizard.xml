<?xml version="1.0" encoding="UTF-8"?>
<!--
-->
<wizard version="1" kind="project"
        class="qmakeproject" firstpage="10"
        id="A.customqtproject" category="A.DevMachines">
    <icon>devmachines32x32.png</icon>
    <description>Creates a Qt application with form that has a Ribbon Window, Ribbon Bar and Ribbon Status Bar.</description>
    <displayname>Ribbon Qt Application</displayname>;
    <displaycategory>Developer Machines</displaycategory>
    <files>
	<file source="main.cpp" openeditor="true"/>
	<file source="mainwindow.cpp" target="%RibbonClassName:l%.%CppSourceSuffix%" openeditor="true" />
	<file source="mainwindow.h" target="%RibbonClassName:l%.%CppHeaderSuffix%" openeditor="true"/>
	<file source="mainwindow.ui" target="%RibbonClassName:l%.ui" openeditor="true"/>        
	<file source="project.pro" target="%ProjectName:l%.pro" openproject="true"/>
    </files>
    <!-- Create a 2nd wizard page with parameters -->
    <fieldpagetitle>Add Ribbon Window</fieldpagetitle>
    <fields>
		<field name="RibbonClassName">
			<fieldcontrol class="QLineEdit" validator="^[a-zA-Z0-9_]+$" defaulttext="MyRibbonWindow" placeholdertext="Enter a class name"/>
			<fielddescription>Class name:</fielddescription>
		</field>

		<field mandatory="true" name="QtitanInstallPath">
			<fieldcontrol class="Utils::PathChooser"
                          defaulttext="" />
			<fielddescription>Qtitan Install Path:</fielddescription>
		</field>
	</fields>
</wizard>
